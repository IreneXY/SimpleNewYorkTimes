<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/div.vlist"
    android:gravity="center"
    android:padding="@dimen/margin_normal"
    android:background="@drawable/bg_doc"
    android:layout_margin="@dimen/margin_mid">
    <ImageView
        android:id="@+id/item_highscore_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/item_highscore_title"
        style="@style/p"
        android:lines="2"
        android:ellipsize="end"
        android:layout_alignBottom="@id/item_highscore_poster"
        android:background="@color/black_semi_bb"
        android:textColor="@color/white"
        android:text=""
        android:padding="@dimen/margin_mid"/>
    <TextView
        android:id="@+id/item_highscore_content"
        android:layout_below="@id/item_highscore_poster"
        android:layout_marginTop="@dimen/margin_mid"
        style="@style/p" />

</RelativeLayout>