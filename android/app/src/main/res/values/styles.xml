<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="div.vlist" parent="div">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="div.hlist" parent="div">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="h1" parent="div">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/grey800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="p" parent="div">
        <item name="android:textSize">@dimen/p</item>
        <item name="android:textColor">@color/grey700</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:background">@drawable/bg_btn_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button.grey" parent="button">
        <item name="android:background">@drawable/bg_btn_grey</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
